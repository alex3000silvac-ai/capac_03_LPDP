# Base de datos principal (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost/juridica_digital_master
DATABASE_URL_ASYNC=postgresql+asyncpg://user:password@localhost/juridica_digital_master

# Seguridad
SECRET_KEY=your-secret-key-at-least-32-characters-long
LICENSE_ENCRYPTION_KEY=your-license-encryption-key-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encriptación AES-256 (Reemplaza Base64)
AES_ENCRYPTION_KEY=generate-32-byte-key-for-production
AES_ENCRYPTION_IV=generate-16-byte-iv-for-production

# Usuario DEMO Seguro (Para pruebas de clientes)
