ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 🌍 CONFIGURACIÓN DEL SISTEMA
ENVIRONMENT=production
DEBUG=false

# 🌐 CORS - PERMITIR FRONTEND
