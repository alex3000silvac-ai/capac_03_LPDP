# Headers de seguridad para Netlify/Render
/*
  # Prevenir ataques de clickjacking
  X-Frame-Options: DENY
  
  # Prevenir ataques MIME-type sniffing
  X-Content-Type-Options: nosniff
  
  # Activar XSS protection del navegador
  X-XSS-Protection: 1; mode=block
  
  # Forzar HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains
  
  # Content Security Policy restrictiva
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://scldp-backend.onrender.com https://*.supabase.co http://localhost:3001 http://127.0.0.1:3001 http://*:3001; frame-ancestors 'none'; base-uri 'self'
  
  # Prevenir leak de información del referrer
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Control de permisos de APIs del navegador
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  
  # Cache control para assets estáticos
  Cache-Control: public, max-age=31536000, immutable